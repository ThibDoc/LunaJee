<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN"
 "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">

<validators>
	<field name="article.prixUnitaire">
		<field-validator type="regex">
			<param name="regex"><![CDATA[/^\d+(?:[.]\d+)?$/]]></param>
			<message>Veuillez donner un nombre valide. (ex : 35.5)</message>
		</field-validator>
	</field>
	<field name="article.quantite">
		<field-validator type="int">
			<param name="regex"><![CDATA[\d{5}]]></param>
			<message>Veuillez donner une quantit√© valide. (ex : 35)</message>
		</field-validator>
	</field>
</validators>